<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_gravity="center"
            android:text="Add your Pass key"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_normal"/>

        <EditText
            android:id="@+id/etPassKey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:hint="Add your Pass key"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/etConfirmPassKey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:drawablePadding="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:hint="Confirm Passkey"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/gray"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/spacing_normal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swShowPass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"/>

            <TextView
                app:layout_constraintStart_toEndOf="@id/swShowPass"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:textColor="@color/colorAccent"
                android:text="Show Passkey"
                android:textSize="@dimen/font_normal"/>

            <TextView
                android:id="@+id/tvKeyMatch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text=""
                android:textSize="@dimen/font_normal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btSubmitNewKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_gravity="center"
            android:text="Save Password"
            android:elevation="2dp"
            android:translationZ="6dp"
            android:textAllCaps="false"
            android:enabled="false"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/button_state_colors" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>